<p id="notice"><%= notice %></p>

<h1>文章列表</h1>

<table  class="table table-striped .table-bordered table-hover">
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th>作者</th>
      <th>创建时间</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.user_name %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= link_to '查看', post ,class: "btn btn-info" %></td>
        <td><%= link_to '编辑', edit_post_path(post),class: "btn btn-primary" %></td>
        <td><%= link_to '删除', post, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <div>
    <%= link_to "CSV",    posts_path(format: "csv") , class: "btn btn-info" %> |
    <%= link_to "Excel",  posts_path(format: "xlsx") , class: "btn btn-info" %>
  </div>

  <div class="panel-footer clearfix" style="margin-top:10px">
   <!--  <%= paginate(@posts,temem:'twitter-bootstrap', remote: true) %> -->
    <%= paginate @posts %>
    <%= page_entries_info @posts %>
  </div>
<br>

<%= link_to '创建', new_post_path ,class: "btn btn-default" %>

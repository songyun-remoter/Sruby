<p id="notice"><%= notice %></p>

<h1>用户列表</h1>

<table  class="table table-striped .table-bordered table-hover">
  <thead>
    <tr>
      <th>用户邮箱</th>
      <th>Crypted密码</th>
      <th>Salt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.crypted_password %></td>
        <td><%= user.salt %></td>
        <td><%= link_to '查看', user,class: "btn btn-info" %></td>
        <td><%= link_to '编辑', edit_user_path(user) ,class: "btn btn-primary" %></td>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加', new_user_path , class: "btn btn-default" %>

<div class="row">
<div class="col-md-6 col-md-offset-3">
  <% if @hint!=nil %> 
    <div class="alert alert-warning"><%= @hint %></div>
  <% end %>
  <%= form_for :user, url: login_url, method: :post do |f| %>

    <%= f.label "用户名称" %>
    <%= f.text_field :login, class: "form-control", placeholder: "input your name or email" %>

    <%= f.label "用户密码" %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :remeber_me, class: "checkbox inline" do %>
      <%= f.check_box :remeber_me %>
      <span>Remeber me on this computer</span>
    <% end -%>

    <%= f.submit "登录", class: "btn btn-primary" %>
  <% end -%>
  <p>新用户?<%= link_to "注册!", sign_up_path %></p>
</div>
</div>
